<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#733626">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center_horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Título do evento -->
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/titulo_evento"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="8dp" />

        <!-- Campo de nome do evento -->
        <EditText
            android:id="@+id/input_event_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_evento"
            android:background="@android:drawable/edit_text"
            android:textColorHint="#7B3E20"
            android:textColor="#000000"
            android:padding="8dp"
            android:layout_marginBottom="16dp"
            android:inputType="textCapSentences"
            android:autofillHints="name" />

        <!-- Label da data -->
        <TextView
            android:id="@+id/data_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_data"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp" />

        <!-- Exibição da data -->
        <TextView
            android:id="@+id/data_valor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/data_exemplo"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:layout_marginBottom="16dp" />

        <!-- Label do valor -->
        <TextView
            android:id="@+id/valor_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_valor"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp" />

        <!-- Exibição do valor da sala -->
        <TextView
            android:id="@+id/valor_valor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/valor_exemplo"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:layout_marginBottom="16dp" />

        <!-- Checkbox para notificação de email -->
        <CheckBox
            android:id="@+id/email_notification_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/checkbox_texto"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="24dp" />

        <!-- Botão para confirmar o agendamento -->
        <Button
            android:id="@+id/confirmar_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/botao_confirmar"
            android:backgroundTint="#2E8B57"
            android:textColor="#FFFFFF"
            android:padding="12dp" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>